<div class="container">

<p id="notice"><%= notice %></p>

<h1>Listing Improvements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Principle</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @improvements.each do |improvement| %>
      <tr>
        <td><%= improvement.title %></td>
        <td><%= improvement.author %></td>
        <td><%= improvement.principle %></td>
        <td><%= improvement.description %></td>
        <td><%= pluralize(improvement.votes.count, "vote") %></td>
        <td><%= button_to '+1', upvote_improvement_path(improvement), method: :post %></td>
        <td><%= link_to 'Show', improvement %></td>
        <td><%= link_to 'Edit', edit_improvement_path(improvement) %></td>
        <td><%= link_to 'Destroy', improvement, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>
